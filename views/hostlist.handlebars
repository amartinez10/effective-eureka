<!DOCTYPE html>
<html lang="en">

<!--Loading head information & navbar-->
<script type="text/javascript" src="https://code.jquery.com/jquery.js"></script>
<script>
    $(function () {
        $("#navbar").load("templates/navbar.handlebars")
    });
</script>
<div id="navbar"></div>

<!--Main body of page-->
<body>
    <div class="flexbox flex-tabs">
            <a href="/indexin">
                <div class="active">Events</div>
            </a>
            <a href="/hostlist">
                <div>Hosts</div>
            </a>
        </div>
    <div class="g-grid">
        <section class="1-pad-bot-5 1-sm-pad-bot-3">
            <div class="js-popular-events">
                <div class="js-events-list">
                    {{#each hosts}}
                        <div class="g-cell g-cell--has-overflow g-cell-1-1 g-cell-md-1-2-g-cell-lg-1-3 1-pad-vert-3" role="row">
                          <div class="well well-sm" style="margin-bottom:0px;" role="gridcell">
                              <div class="poster-card__header" >
                                    <div style="display: inline-block">
                                        <img class="img-responsive" style="height:80px;width:80px" src="{{img}}" alt="">
                                    </div>
                                    <div style="display: inline-block" >
                                        <a href="/hostpage" >
                                            {{hostname}}                               
                                    </a></div>
                                    
                                </div>
                        </div>
                    </div>
                {{/each}}
             </div>
            </div>
        </section>
    </div>
</body>

</html>