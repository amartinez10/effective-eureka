<!DOCTYPE html>
<html lang="en">

<head>
    <script type="text/javascript" src="https://code.jquery.com/jquery.js"></script>
    <script>
        $(function () {
            $("head").load("html/head.handlebars")
        });
    </script>

    <script language="JavaScript" type="text/javascript">
        function login(showhide) {
            if (showhide == "show") {
                document.getElementById('popupbox').style.visibility = "visible";
                $("div").not().addClass("blur-me");
                $("img").not().addClass("blur-me");
                $("div").last().removeClass("blur-me");
            } else if (showhide == "hide") {
                document.getElementById('popupbox').style.visibility = "hidden";
                $("div").not().removeClass("blur-me");
                $("img").not().removeClass("blur-me");
            }
        }
    </script>

    <script>
        $(function () {
            $("#header").load("html/navbar.handlebars");
        });
    </script>

</head>

<header>
    <div class="custom-container">
        <!--#include file="include_head.html" -->
        <div id="header"></div>
        <div class="flexbox flex-tabs">
            <a href="/">
                <div class="active">Events</div>
            </a>
            <a href="/hostlist">
                <div>Hosts</div>
            </a>
        </div>
    </div>
</header>

<body>
    <div class="g-grid">
        <section class="1-pad-bot-5 1-sm-pad-bot-3">
            <div class="js-popular-events">
                <div class="js-events-list">
                    {{#each events}}
                    <div class="g-cell g-cell--has-overflow g-cell-1-1 g-cell-md-1-2-g-cell-lg-1-3 1-pad-vert-3" role="row">
                        <div class="well well-sm" style="margin-bottom:0px;" role="gridcell">
                            <div style="display: inline-block">
                                <div style="display: inline-block">
                                    <img style="height:150px;width:150px" src="{{img}}" alt="">
                                </div>
                                <div style="display: inline-block">
                                    <a href="/eventpage">
                                        <div>{{eventname}}</div>
                                        <div>{{date}}</div>
                                        <div>{{location}}</div>
                                    </a>
                                    <p style="display: inline-block">Category:</p>
                                    <a class="event-category" style="display: inline-block" href="">{{categories}}</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </section>
    </div>
    <div id="popupbox">
        <form name="login" action="" method="post">
            <center><font color="ffffff">Username:</font></center>
            <center>
                <input name="username" size="14">
            </center>
            <center><font color="ffffff">Password:</font></center>
            <center>
                <input name="password" type="password" size="14">
            </center>
            <center><a href="/indexin"><font color="ffffff">Submit</font></a></center>
            <center><a href="javascript:login('hide')"><font color="ffffff">Close</font></a></center>
        </form>
    </div>
</body>

</html>